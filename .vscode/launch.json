  "version": "0.2.0",
  "configurations": [
    {
      "name": "morph.cli",
      "type": "python",
      "request": "launch",
      "module": "morph.cli",
      "args": ["--force-fetch"],
      "justMyCode": true,
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "autoReload": {
        "enable": true,
        "exclude": ["**/node_modules/**", "**/.git/**"],
        "include": ["**/*.py"]
      },
      "consoleTitle": "debugging morph.cli"
    }
  ]
}
